-
    var list_carousel = [
        {src: 'img/slide-1.jpg'},
        {src: 'img/slide-1.jpg'},
        {src: 'img/slide-1.jpg'}
    ];

mixin about__carousel
    .ar-about-carousel
        .ar-carousel
            .owl-carousel
                each item,index in list_carousel
                    .slide
                        img(src="img/slide-1.jpg", alt="about-image-slide-" + (index+1))

mixin about__image
    .ar-about-block
        .ar-item-image-holder
            img.ar-item-image.img-fluid(src="img/dishes.png", alt="about-image-block")

mixin about(left,right)
    section.ar-section.ar-about
        .ar-full-width-wrapper
            .container
                .ar-about-wrapper
                    .ar-list-block.ar-column-2
                        .item
                            .ar-about-left
                                +#{left}
                        .item
                            .ar-bout-right
                                +#{right}
include ../mixin
- var url = 'img/parallax-5.jpg';
-
    var menu = {
        breakfast: 'breakfastMenu',
        lunch: 'lunchMenu',
        dinner: 'dinnerMenu'
    };
-
    var list_menu_1 = [
        {src: 'img/menu/dining-item-1.jpg', name: 'Gosh Egg-White Omelet', price: '$35.40', des: 'Mussel with tomato sauce, wine'},
        {src: 'img/menu/dining-item-2.jpg', name: 'Powered Turkey Meatballs', price: '$50.00', des: 'Mussel with tomato sauce, wine'},
        {src: 'img/menu/dining-item-3.jpg', name: 'Creamy Feta Salad Dressing', price: '$85.20', des: 'Mussel with tomato sauce, wine'},
        {src: 'img/menu/dining-item-4.jpg', name: 'Roasted Red Pepper Hummus', price: '$50.20', des: 'Mussel with tomato sauce, wine'},
        {src: 'img/menu/dining-item-1.jpg', name: 'Gosh Egg-White Omelet', price: '$35.40', des: 'Mussel with tomato sauce, wine'},
        {src: 'img/menu/dining-item-2.jpg', name: 'Powered Turkey Meatballs', price: '$50.00', des: 'Mussel with tomato sauce, wine'},
        {src: 'img/menu/dining-item-3.jpg', name: 'Creamy Feta Salad Dressing', price: '$85.20', des: 'Mussel with tomato sauce, wine'},
        {src: 'img/menu/dining-item-4.jpg', name: 'Roasted Red Pepper Hummus', price: '$50.20', des: 'Mussel with tomato sauce, wine'}
    ];
section(class="ar-section ar-menu ar-parallax-image ar-parallax-image--small")
    .ar-full-width-wrapper
        .ar-parallax
            .ar-parallax-wrap.ar-parallax-wrap--box.full-width
                .ar-parallax-box
                    h2.ar-heading.ar-heading--style-1 Our Delicious Menu Items
                    h4.ar-heading.ar-heading--style-3 Fresh And Healthy Food Available
            .ar-parallax-wrap.ar-parallax-wrap--box
                .ar-menu-tab-wrapper
                    // .ar-tabs
                    ul.nav.ar-tabs.sf-menu
                        li.item
                            a.link.active(data-toggle="tab", href= `#${menu.breakfast}`) break fast
                        li.item
                            a.link(data-toggle="tab", href= `#${menu.lunch}`) lunch
                        li.item
                            a.link(data-toggle="tab", href= `#${menu.dinner}`) dinner
            .ar-parallax-wrap.ar-parallax-wrap--holder(style= "background-image: url(" + url + ")")
        .ar-section
            .ar-menu-content
                .container
                    .ar-menu-content-wrapper
                        // .ar-tab-content
                        .ar-tab-content.tab-content
                            div(id= menu.breakfast).item.tab-pane.active
                                +list_menu(list_menu_1,{name: 'row',col: '2', color: 'black'})
                            div(id= menu.lunch).item.tab-pane.fade
                                +list_menu(list_menu_1,{name: 'row',col: '2', color: 'black'})
                            div(id= menu.dinner).item.tab-pane.fade
                                +list_menu(list_menu_1,{name: 'row',col: '2', color: 'black'})
